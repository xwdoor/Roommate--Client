<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.xwdoor.roommate">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".RoommateApplication"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.AddBillActivity"/>
        <activity android:name=".activity.BillListActivity"/>
        <activity android:name=".activity.FinishBillActivity"/>
        <activity android:name=".activity.UserListActivity"/>
        <activity android:name=".activity.AddUserActivity"/>
    </application>

</manifest>
